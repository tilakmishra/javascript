//Enter an Array value (a or b or c or d)
//if there is an alphabet available in the array it will say true, else false

var a = [1, 2, 3];
var b = ['a', 2, 3];
var c = [];
var d = ['a', 'b', 'c'];
function hasalphabet(array)
{
for (var index=0;index<array.length;index++)
{
var value=array[index];

if (typeof value == 'number')
return true;
}
return false;
}

// this is a comment

hasAlphabet(a); // false
hasAlphabet(b); // true
hasAlphabet(c); // false
hasAlphabet(d); // true

//The below program will ask you to enter name,age and gender and then depending on the gender value it will print below

function getdetails(name,age,gender)
{
if (gender=='male'){
console.log('His name is'+ name + ', and he is '+ age + ' years old');
} else {console.log('Her name is'+ name + ', and she is '+ age + ' years old');}
}


